<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bkg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/round_remove_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:text="Yeni Not Kaydet"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutDersAd"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="24dp"
            android:textColorHint="#9E9E9E">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTxtDersAd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ders Adı"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutNot1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp"
            android:textColorHint="#9E9E9E">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTxtNot1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Birinci Not"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutNot2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp"
            android:textColorHint="#9E9E9E">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTxtNot2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="İkinci Not"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnKaydet"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="#7E57C2"
            android:text="Kaydet"
            app:rippleColor="#5E35B1" />

    </LinearLayout>
</LinearLayout>